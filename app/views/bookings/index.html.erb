<p id="notice"><%= notice %></p>

<h1>Bookings for Amstel river Unique Studio</h1>

<%= month_calendar events: @bookings do | date, bookings| %>
  <%= date.day %>

  <% bookings.each do |booking| %>
    <div>
      <%= booking.name %>
    </div>
  <% end %>
<% end %>



<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>From:</th>
      <th>To:</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @bookings.each do |booking| %>
      <tr>
        <td><%= booking.name %></td>
        <td><%= booking.start_time.strftime("%m-%d-%Y") %></td>
        <td><%= booking.end_time.strftime("%m-%d-%Y") %></td>
        <td><%= link_to 'Show', booking %></td>
        <td><%= link_to 'Edit', edit_booking_path(booking) %></td>
        <td><%= link_to 'Destroy', booking, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Booking', new_booking_path %>


