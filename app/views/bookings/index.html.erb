<div class="cal">
  <h1>Availability Studio</h1>
  <%= month_calendar events: @bookings do | date, bookings| %>
    <%= date.day %>

    <% bookings.each do |booking| %>
      <div>
        <% booking %>
      </div>
    <% end %>
  <% end %>
<p>
  <div><a href="mailto:bekkersgreet@hotmail.com?subject=Booking Request Amstel river Studio&body=Dear Margeretha,%0D%0AI would like to make a booking request for your studio from DATE to DATE.%0D%0A%0D%0ABest regards,%0D%0A" class="mybutton logo">Booking Request</a></div>
</p>
<br>
<% if !user_signed_in? %>
  <div>
    <%= link_to "Admin", new_user_session_path, class: "mybutton tekst" %>
  </div>
<% end %>
</div>

<% if user_signed_in? %>
  <div class="cal">
    <table class="table table-bordered">
      <thead>
        <tr>
          <th>Name</th>
          <th>From:</th>
          <th>To:</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @bookings.each do |booking| %>
          <tr>
            <td><%= booking.name %></td>
            <td><%= booking.start_time.strftime("%d-%m-%Y") %></td>
            <td><%= booking.end_time.strftime("%d-%m-%Y") %></td>
            <td><%= link_to 'Edit', edit_booking_path(booking) %></td>
            <td><%= link_to 'Del', booking, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
    <br>
    <%= link_to 'New Booking', new_booking_path, class: "mybutton tekst" %>
  </div>
<% end %>

